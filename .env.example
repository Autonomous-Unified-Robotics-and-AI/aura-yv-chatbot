# Database Configuration
POSTGRES_URL="your_postgres_connection_string"
PRISMA_DATABASE_URL="your_prisma_accelerate_url"

# Backend Configuration
BACKEND_URL="https://your-railway-backend.railway.app"

# API Keys
OPENAI_API_KEY="your_openai_api_key"
ANTHROPIC_API_KEY="your_anthropic_api_key"
NOTION_INTEGRATION="your_notion_integration_token"

# Document Storage Configuration
# Options: "local" (development), "vercel_blob" (production), "s3" (AWS)
DOCUMENT_STORAGE_TYPE="local"

# Vercel Blob Storage (for production file storage)
BLOB_READ_WRITE_TOKEN="your_vercel_blob_token"

# AWS S3 Storage (alternative to Vercel Blob)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
S3_DOCUMENTS_BUCKET="yale-ventures-documents"

# Frontend Configuration
FRONTEND_URL="https://your-vercel-deployment.vercel.app"
NEXT_PUBLIC_SHOW_CITATION_SOURCE_CONTENT="false"